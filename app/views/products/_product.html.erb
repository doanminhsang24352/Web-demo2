<h1><%= @product.name %></h1>

<%= link_to "Back", products_path %>
<%= link_to "Edit", edit_product_path(@product) %>

<div id="<%= dom_id(@product) %>">
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Tag:</strong>
    <%= @product.tag %>
  </p>

  <p>
    <strong>String:</strong>
    <%= @product.string %>
  </p>
</div>
